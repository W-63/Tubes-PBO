<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.ModuleManagementController"
            prefWidth="1000" prefHeight="750"
            stylesheets="@css/style.css">

    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Manajemen Modul Kelas" styleClass="title-label" />
        <Label text="Tambahkan dan kelola modul untuk kelas yang ada." style="-fx-text-fill: grey;" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Pilih Kelas:" prefWidth="100"/>
            <ComboBox fx:id="courseComboBox" promptText="Pilih Kelas" HBox.hgrow="ALWAYS"/>
        </HBox>

        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 10;">
            <Label text="Tambahkan Modul Baru" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Nomor Modul:" prefWidth="120"/>
                <TextField fx:id="moduleNumberField" promptText="Misal: 1" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Judul Modul:" prefWidth="120"/>
                <TextField fx:id="moduleTitleField" promptText="Judul modul" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Deskripsi:" prefWidth="120"/>
                <TextArea fx:id="moduleDescriptionField" promptText="Deskripsi singkat modul" prefRowCount="2" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="URL Konten:" prefWidth="120"/>
                <TextField fx:id="moduleContentUrlField" promptText="Link ke video/materi (opsional)" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tipe Modul:" prefWidth="120"/>
                <TextField fx:id="moduleTypeField" promptText="Contoh: VIDEO, TEXT, QUIZ" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Durasi (Menit):" prefWidth="120"/>
                <TextField fx:id="moduleDurationField" promptText="Durasi video/materi (opsional)" HBox.hgrow="ALWAYS"/>
            </HBox>
            <Button fx:id="addModuleButton" text="Tambah Modul" styleClass="main-button" onAction="#handleAddModule"/>
        </VBox>

        <Region prefHeight="10"/>

        <Label text="Daftar Modul untuk Kelas Terpilih" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TableView fx:id="modulesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="moduleNumberColumn" text="No." prefWidth="50"/>
                <TableColumn fx:id="moduleTitleColumn" text="Judul Modul" prefWidth="250"/>
                <TableColumn fx:id="moduleTypeColumn" text="Tipe" prefWidth="100"/>
                <TableColumn fx:id="actionColumn" text="Aksi" prefWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Button fx:id="backButton" text="Kembali ke Home" styleClass="main-button" onAction="#handleBack"/>
    </VBox>
</AnchorPane>