<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="main-anchor-pane" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.HomeController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
         </padding>
         <children>
            <Label styleClass="page-title" text="Beranda EDULIFE+">
               <font>
                  <Font name="Segoe UI Bold" size="32.0" />
               </font>
            </Label>

            <Label fx:id="welcomeLabel" styleClass="welcome-text-label">
                <font>
                    <Font name="Segoe UI" size="16.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" /> 
                </VBox.margin>
            </Label>

            <VBox alignment="CENTER" spacing="20.0" maxWidth="400.0" styleClass="home-navigation-container">
               <children>
                  <Button fx:id="ecommerceButton" onAction="#handleEcommerce" styleClass="home-nav-button" text="Jelajahi E-Commerce" prefWidth="Infinity">
                     <graphic>
                        <FontAwesomeIconView glyphName="SHOPPING_CART" size="20" styleClass="home-nav-icon"/>
                     </graphic>
                  </Button>

                  <Button fx:id="dailyActivityButton" onAction="#handleDailyActivity" styleClass="home-nav-button" text="Kelola Aktivitas Harian" prefWidth="Infinity">
                     <graphic>
                        <FontAwesomeIconView glyphName="TASKS" size="20" styleClass="home-nav-icon"/>
                     </graphic>
                  </Button>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <children>
                    <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="button-danger" text="Logout">
                        <graphic>
                           <FontAwesomeIconView glyphName="SIGN_OUT" size="18" />
                        </graphic>
                        <VBox.margin>
                           <Insets top="50.0" />
                        </VBox.margin>
                    </Button>
                </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
