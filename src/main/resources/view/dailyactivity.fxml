<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.time.*?> <AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.DailyActivityController"
            prefWidth="900" prefHeight="650"
            stylesheets="@css/style.css">

    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Aktivitas Harian Saya" styleClass="title-label" />
        <Label text="Rencanakan dan pantau aktivitas harian Anda." style="-fx-text-fill: grey;" />

        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 10;">
            <Label text="Tambah Aktivitas Baru" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Kategori:" prefWidth="100"/>
                <ComboBox fx:id="kategoriComboBox" promptText="Pilih Kategori" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Deskripsi:" prefWidth="100"/>
                <TextArea fx:id="deskripsiField" promptText="Contoh: Belajar JavaFX 1 jam" prefRowCount="3" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tanggal:" prefWidth="100"/>
                <DatePicker fx:id="tanggalPicker" promptText="Pilih Tanggal" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Waktu (HH:mm):" prefWidth="100"/>
                <TextField fx:id="waktuField" promptText="Contoh: 09:30" HBox.hgrow="ALWAYS"/>
            </HBox>
            <Button fx:id="tambahButton" text="Tambah Aktivitas" styleClass="main-button" onAction="#tambahTarget"/>
        </VBox>

        <Region prefHeight="10"/> <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="hapusButton" text="Hapus Aktivitas Terpilih" styleClass="main-button" onAction="#hapusTarget"/>
        </HBox>

        <TableView fx:id="todoTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="kategoriColumn" text="Kategori" prefWidth="120"/>
                <TableColumn fx:id="deskripsiColumn" text="Deskripsi" prefWidth="300"/>
                <TableColumn fx:id="tanggalColumn" text="Tanggal" prefWidth="100"/>
                <TableColumn fx:id="waktuColumn" text="Waktu" prefWidth="80"/>
                <TableColumn fx:id="statusColumn" text="Selesai" prefWidth="70"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Button fx:id="kembaliButton" text="Kembali ke Home" styleClass="main-button" onAction="#handleKembaliKeHome"/>
    </VBox>
</AnchorPane>